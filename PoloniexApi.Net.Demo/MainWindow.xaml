<Window x:Class="Jojatekok.PoloniexAPI.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="poloniex bot"
        Width="798.868" Height="425.985">
    <Grid Margin="10">
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="355" Width="751" SelectionChanged="dataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Path=Amount}" SortDirection="Ascending"/>
                <DataGridTextColumn Header="Rate" Binding="{Binding Path=Rate, StringFormat={}{0:0.000%}}"/>
                <DataGridTextColumn Header="Fees" Binding="{Binding Path=Fees, StringFormat={}{0:0.00000000}}"/>
                <DataGridTextColumn Header="Current Profit" Binding="{Binding Path=Profit, StringFormat={}{0:0.00000000}}"/>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
